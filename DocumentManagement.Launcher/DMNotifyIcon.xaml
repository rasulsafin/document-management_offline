<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:notify="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:DocumentManagement.Launcher"
                    >

    <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
        <MenuItem Header="Отрыть окно" Command="{Binding ShowWindowCommand}" >
            <MenuItem.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsShowWindow}" Value="True">
                            <Setter Property="MenuItem.IsEnabled" Value="False"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsShowWindow}" Value="False">
                            <Setter Property="MenuItem.IsEnabled" Value="True"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </MenuItem.Style>            
        </MenuItem>

        <MenuItem Header="Закрыть окно" Command="{Binding HideWindowCommand}" >
            <MenuItem.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsShowWindow}" Value="True">
                            <Setter Property="MenuItem.IsEnabled" Value="True"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsShowWindow}" Value="False">
                            <Setter Property="MenuItem.IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </MenuItem.Style>

        </MenuItem>
        <Separator />
        <MenuItem Header="Закрыть 'DM BRIO MRS'" Command="{Binding ExitApplicationCommand}" />
    </ContextMenu>

    <notify:TaskbarIcon x:Key="NotifyIcon"
                    IconSource="/logo64.ico"
                    ToolTipText="Документооборот BRIO MRS"
                    DoubleClickCommand="{Binding ShowWindowCommand}"
                    ContextMenu="{StaticResource SysTrayMenu}">
        <notify:TaskbarIcon.DataContext>
            <local:NotifyIconViewModel />
        </notify:TaskbarIcon.DataContext>
    </notify:TaskbarIcon>

</ResourceDictionary>