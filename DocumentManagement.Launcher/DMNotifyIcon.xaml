<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:notify="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:DocumentManagement.Launcher"
                    xmlns:base="clr-namespace:DocumentManagement.Launcher.Base"
                    >
    <base:BoolToVisible x:Key="BoolToVisible"/>


    <ContextMenu x:Shared="true" x:Key="SysTrayMenu">
        <MenuItem>
            <MenuItem.Style>
                <Style TargetType="{x:Type MenuItem}">
                    <Setter Property="IsHitTestVisible" Value="False"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsRunDm}" Value="True">
                            <Setter Property="Header" Value="Документооборот запущен"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Background" Value="Green"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsRunDm}" Value="False">
                            <Setter Property="Header" Value="Документооборот остановлен"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </MenuItem.Style>
        </MenuItem>

        <MenuItem Header="Запустить документооборот" Command="{Binding StartDmConsoleCommand}">
            <MenuItem.Style>
                <Style TargetType="{x:Type MenuItem}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsRunDm}" Value="False">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsRunDm}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </MenuItem.Style>
        </MenuItem>

        <MenuItem Header="Показать/скрыть консоль" Command="{Binding VisibleConsoleCommand}">
            <MenuItem.Style>
                <Style TargetType="{x:Type MenuItem}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsRunDm}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsRunDm}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </MenuItem.Style>
        </MenuItem>

        <MenuItem Header="Отрыть Swagger" Command="{Binding OpenSwaggerCommand}" 
                  Visibility="{Binding IsRunDm, Converter={StaticResource BoolToVisible}}" />

        <MenuItem Header="Отрыть файл настроек" Command="{Binding OpenSettingsCommand}" />

        <Separator />
        <MenuItem Header="Закрыть 'DM BRIO MRS'" Command="{Binding ExitApplicationCommand}" />
    </ContextMenu>

    <notify:TaskbarIcon x:Key="NotifyIcon"
                    IconSource="/logo64.ico"
                    ToolTipText="Документооборот BRIO MRS"
                    DoubleClickCommand="{Binding ShowWindowCommand}"
                    ContextMenu="{StaticResource SysTrayMenu}">
        <notify:TaskbarIcon.DataContext>
            <local:NotifyIconViewModel />
        </notify:TaskbarIcon.DataContext>
    </notify:TaskbarIcon>

</ResourceDictionary>